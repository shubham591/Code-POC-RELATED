  <!-- SGWT Widget Configuration -->
  <script>
    const currentHost = window.location.hostname;

    let widgetEnv = 'homologation'; // default to UAT

    // Set environment based on hostname
    if (currentHost.includes('uat')) {
      widgetEnv = 'homologation';
    } else if (currentHost.includes('prod-domain.com')) { // replace with your actual prod domain
      widgetEnv = 'production';
    }

    SGWTWidgetConfiguration = {
      environment: widgetEnv,
      sharedCssUrls: [
        "https://ic-widgets.azureedge.net/vendors/sg-bootstrap/themes/standard/css/sg-bootstrap-standard.min.css",
        "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"
      ]
    };
  </script>
